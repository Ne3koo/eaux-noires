{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username|capitalize }}{% endblock %}

{% block body %}

<div class="">
        <div class="col-md-8 profile">
            <h2 class="_profil">Profil de {{ user.username|capitalize }}</h2>
            <form>
                <div class="col-md-8">
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text">@</span>
                            <input type="text" class="form-control" id="username" value="{{ user.username }}" readonly>
                        </div>
                    <div class="mb-3">
                        <p>{{ user.comments|length }} commentaires liés à {{ user.username }}</p>
                    </div>
                <a href="{{ path('user_edit', {'username': user.username}) }}" class="btn btn-primary">Éditer le profil</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}
