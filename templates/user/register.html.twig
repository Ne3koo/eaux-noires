{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

<div class="container">
    <h1>S'inscrire</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    
    <div class="form-group">
        <label for="username">Nom d'utilisateur</label>
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        <label for="plainPassword">Mot de passe</label>
        <div class="d-flex align-items-center">
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
        </div>
    </div>

    <div class="form-group form-check">
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
        <label class="form-check-label" for="agreeTerms">Accepter les conditions d'utilisations</label>
    </div>

    <button type="submit" class="comment_submit">Register</button>

    {{ form_end(registrationForm) }}
</div>

{% endblock %}
