{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row_img">
            <section>
                <img src="/uploads/{{ article.featuredImage.filename }}" alt="{{ article.featuredImage.altText }}" loading="lazy" width="180" height="180" >
            </section>

            <div class="container">
                <h1 class="article_link">{{ article.title }}</h1>
            </div>
        </div>
        
        <hr>

        {{ article.content|raw }}

        <hr>
        
        <section class="comments_zone">
            
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ form(commentForm, { 'attr': {'class': 'comment-form' } }) }}
            {% endif %}

            <h2>
            <span id="comment-count">{{ article.comments|length }}</span> commentaire(s)
            </h2>

            <div class="comment-list">
                {% for comment in comments %}
                {% include 'comment/index.html.twig' with [comment] %}
                {% endfor %}
            </div>

        </section>
    </div>
{% endblock %}
